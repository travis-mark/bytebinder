<section>
    <h2><%= @user.name %></h2>
    <dl>
        <dt>E-mail</dt>
        <dd><%= @user.email %></dd>
        <%= if @user.notes do %>
        <dt>Notes</dt>
        <dd>
            <%= @user.notes %>
        </dd>
        <% end %>
    </dl>
    <a href={~p"/users/#{@user.id}/edit"}>Edit</a> 
    <.form for={} action={~p"/users/#{@user.id}"} method="DELETE">
        <button type="submit">Delete</button>
    </.form>
</section>